<body>

  <div class="container">
    
    <h2>LangTime<small>Login</small></h2>

    <div >
        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>
    </div>

    <form action="/login" method="post" >

      <div class="group">      
        <input type="text" name="email" required>
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>Email</label>
      </div>
      
      <div class="group">      
        <input name="password" type="password" required>
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>Password</label>
      </div>

      <div>
        <ul>
          <li><a href="#">Login</a></li>
          <button type="submit" id="haha"></button>
        </ul>  
      </div>      

    </form>
      
      <p>New user? <a href="/signup">Signup</a></p>
      <p>Or go <a href="/">home</a>.</p>

  </div>

  <script>
  $("li a").click(function(){
    $("#haha").trigger("click");
  })

  $("li").bind("touchstart mousedown",function(){
    var me=$(this);
    var touchElementID=Math.floor((Math.random() * 9999999999999999) + 1);
    var parentOffset=$(me).offset();

    $(me).append('<span class="touch '+touchElementID+'"></span>')

    var touchElement=$(me).find('.touch.'+touchElementID);
    var relX=event.pageX-parentOffset.left;
    var relY = event.pageY-parentOffset.top;

    $(touchElement).css('top',relY);
    $(touchElement).css('left',relX);

    setTimeout(function(){
      $(touchElement).remove();
    },500)

  })
  </script>


