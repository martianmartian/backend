      <div >
        <% if (message.length > 0) { %>
            <div><%= message %></div>
        <% } %>
      </div>

    <form action="/signup" method="post" name="userForm" ng-submit="submitForm(userForm.$valid)" novalidate>


        
      <div class="group">      
        <input type="email" class="form-control" name="email" ng-model="email" required>
        <p ng-show="userForm.email.$invalid && !userForm.email.$pristine" class="help-block">Enter a valid email.</p>
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>Email</label>
      </div>
      
      <div class="group">      
        <input type="password" name="password" ng-model="password" ng-minlength="6" required>
        <p ng-show="userForm.password.$error.minlength" class="help-block">Password is too short.</p>
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>Password</label>
      </div>

      <div>
        <ul>
          <li><a href="#">Signup</a></li>
          <button type="submit" id="haha" ng-disabled="userForm.$invalid"></button>
        </ul>  
      </div>

    </form>
      
      <p>Already have an account? <a href="/login">Login</a></p>
      <p>Or go <a href="/">home</a>.</p>

  </div>

